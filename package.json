{
  "name": "aba-cy-demo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.17",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "react": "^17.0.2",
    "react-audio-player": "^0.17.0",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.3.5",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "set BROWSER=NONE && craco start",
    "build": "craco build",
    "test": "craco test --coverage",
    "coverage": "react-scripts test --coverage --watchAll=false --silent",
    "eject": "react-scripts eject",
    "start:instrumented": "craco -r @cypress/instrument-cra start",
    "cypress:run:coverage": "set BROWSER=NONE && start-server-and-test start:instrumented http://localhost:3000 cypress:run",
    "report:combine:reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/output.json",
    "report:generate:report": "marge cypress/reports/output.json -f output -o mocha_reports/",
    "report:copyScreenshots": "cp -r cypress/screenshots mocha_reports || exit 0",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:open:dev": "cypress open --env configFile=dev",
    "cypress:run:dev": "cypress run --env configFile=dev || exit 0",
    "precypress:open:dev": "rm -rf cypress/screenshots/* || exit 0",
    "precypress:run:dev": "rm -rf cypress/screenshots cypress/reports/* mocha_reports/*",
    "generate:report:dev": "npm run cypress:run:dev & npm run report:combine:reports & npm run report:generate:report & npm run report:copyScreenshots"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/instrument-cra": "^1.4.0",
    "autoprefixer": "^9.8.6",
    "postcss": "^7.0.36",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.7",
    "start-server-and-test": "1.10.11",
    "@cypress/code-coverage": "^3.9.9",
    "@testdeck/mocha": "^0.1.2",
    "@types/classnames": "~2.3.0",
    "@types/mocha": "^9.0.0",
    "cypress": "^8.0.0",
    "cypress-multi-reporters": "^1.5.0",
    "faker": "~5.5.3",
    "mocha": "^9.0.3",
    "mochawesome": "^6.2.2",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.2.0",
    "tslint": "~6.1.3",
    "tslint-react": "~5.0.0",
    "typescript": "4.3.5",
    "typescript-tslint-plugin": "~1.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": ["html", "lcov"]
  },
  "nyc": {
    "report-dir": "coverage-e2e"
  }
}
